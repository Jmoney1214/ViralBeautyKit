<style>
.amz-header-wrapper *{box-sizing:border-box}
.amz-header-wrapper{--top:#131921;--mid:#232F3E;--accent:#FEBD69;--accentH:#F3A847;--ink:#0F1111;--txt:#fff;--w:1500px}
.amz-header-wrapper .amz-header{background:var(--top);color:var(--txt);font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Helvetica,Arial,sans-serif}
.amz-header-wrapper .amz-container{display:flex;align-items:center;padding:6px 16px;max-width:var(--w);margin:0 auto}
.amz-header-wrapper .amz-header__top{min-height:60px}
.amz-header-wrapper .amz-header__top .amz-container{gap:16px}
.amz-header-wrapper .amz-logo{display:flex;align-items:center;padding:.5rem;border:1px solid transparent;border-radius:6px;color:#fff;text-decoration:none}
.amz-header-wrapper .amz-logo:hover{border-color:#fff}
.amz-header-wrapper .amz-logo img{max-height:40px}
.amz-header-wrapper .amz-two{display:none}
@media(min-width:768px){
  .amz-header-wrapper .amz-two{display:flex;flex-direction:column;line-height:1.2}
  .amz-header-wrapper .amz-two__top{font-size:12px;color:#ccc}
  .amz-header-wrapper .amz-two__bottom{font-size:14px;font-weight:700}
}
.amz-header-wrapper .amz-location{display:none;align-items:center;gap:6px;padding:.5rem;border:1px solid transparent;border-radius:6px;color:#fff;text-decoration:none}
.amz-header-wrapper .amz-location:hover{border-color:#fff}
@media(min-width:992px){.amz-header-wrapper .amz-location{display:flex}}
.amz-header-wrapper .amz-search{flex:1;display:flex;height:44px;border-radius:8px;overflow:hidden;background:#fff;box-shadow:0 2px 4px rgba(0,0,0,.18)}
.amz-header-wrapper .amz-search__select{display:none;background:#e6e6e6;color:#111827;padding:0 12px;align-items:center;justify-content:space-between;font-size:13px;font-weight:700;border-right:1px solid #d5d9d9}
.amz-header-wrapper .amz-search__select:after{content:'\25BE';margin-left:6px;opacity:.6}
@media(min-width:768px){.amz-header-wrapper .amz-search__select{display:flex}}
.amz-header-wrapper .amz-search__input{flex:1;border:0;padding:0 12px;font-size:14px;height:100%;color:#111827;background:#fff;outline:none}
.amz-header-wrapper .amz-search__input:focus{outline:2px solid var(--accent);outline-offset:-2px}
.amz-header-wrapper .amz-search__button{background:var(--accent);border:0;display:flex;align-items:center;justify-content:center;width:52px;height:100%;cursor:pointer;border-left:1px solid #e5e7eb}
.amz-header-wrapper .amz-search__button:hover{background:var(--accentH)}
.amz-header-wrapper .amz-utils{display:flex;align-items:center;gap:16px;margin-left:8px}
.amz-header-wrapper .amz-util{padding:.5rem;border:1px solid transparent;border-radius:6px;color:#fff;text-decoration:none}
.amz-header-wrapper .amz-util:hover{border-color:#fff}
.amz-header-wrapper .amz-account,.amz-header-wrapper .amz-returns{display:none}
@media(min-width:768px){.amz-header-wrapper .amz-account,.amz-header-wrapper .amz-returns{display:block}}
.amz-header-wrapper .amz-cart{display:flex;align-items:flex-end;gap:4px}
.amz-header-wrapper .amz-cart__iconwrap{position:relative}
.amz-header-wrapper .amz-cart__count{position:absolute;top:-6px;left:50%;transform:translateX(-50%);color:var(--accent);font-weight:700;font-size:16px}
.amz-header-wrapper .amz-cart span:last-child{display:none}
@media(min-width:768px){.amz-header-wrapper .amz-cart span:last-child{display:inline;font-weight:700;font-size:14px}}
.amz-header-wrapper .amz-header__nav{background:var(--mid);min-height:39px}
.amz-header-wrapper .amz-header__nav .amz-container{justify-content:space-between}
.amz-header-wrapper .amz-nav{display:flex;align-items:center;gap:16px;flex-wrap:nowrap;overflow:auto;padding:.5rem 0}
.amz-header-wrapper .amz-nav a{color:#fff;text-decoration:none;font-size:14px;font-weight:600;padding:.25rem .5rem;border:1px solid transparent;border-radius:4px;white-space:nowrap}
.amz-header-wrapper .amz-nav a:hover{border-color:#fff}
.amz-header-wrapper .amz-promo{display:none;color:#fff}
@media(min-width:992px){.amz-header-wrapper .amz-promo{display:block;font-size:14px;font-weight:700}}
.amz-header-wrapper .visually-hidden{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0}
</style>

<div class="amz-header-wrapper">
  <header class="amz-header">
    <div class="amz-header__top">
      <div class="amz-container">
        <a class="amz-logo" href="{{ routes.root_url }}">
          {%- if settings.logo != blank -%}
            {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
            {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
            {{ settings.logo | image_url: width: 400 | image_tag:
              class: '',
              width: settings.logo_width,
              alt: logo_alt,
              preload: true
            }}
          {%- else -%}
            <span style="font-weight:800;font-size:1.5rem;">{{ shop.name }}</span>
          {%- endif -%}
        </a>

        {%- if section.settings.show_location -%}
        <a class="amz-location" href="{{ section.settings.location_link | default: '#' }}">
          <div class="amz-location__icon" style="margin-top: 10px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
          </div>
          <span class="amz-two">
            <span class="amz-two__top">{{ section.settings.location_label | default: 'Deliver to' }}</span>
            <span class="amz-two__bottom">{{ section.settings.location_value | default: 'United States' }}</span>
          </span>
        </a>
        {%- endif -%}

        <form class="amz-search" action="{{ routes.search_url }}" method="get" role="search">
          <label for="AmzSearchInput-{{ section.id }}" class="visually-hidden">{{ 'general.search.search' | t }}</label>
          <div class="amz-search__select" aria-hidden="true">All</div>
          <input id="AmzSearchInput-{{ section.id }}" class="amz-search__input" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ section.settings.search_placeholder | default: 'Search...' }}">
          <button class="amz-search__button" aria-label="{{ 'general.search.submit' | t }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#0F1111" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
          </button>
        </form>

        <div class="amz-utils">
          {%- if localization.available_languages.size > 0 -%}
            {%- assign current_lang = localization.language.iso_code | upcase -%}
            <a class="amz-util amz-lang" href="#" aria-label="Language">
              <span aria-hidden="true">ðŸ‡ºðŸ‡¸</span>
              <span>{{ current_lang }}</span>
            </a>
          {%- endif -%}
          {%- if section.settings.show_account -%}
            <a class="amz-util amz-account" href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
              <span class="amz-two">
                <span class="amz-two__top">Hello, {% if customer %}{{ customer.first_name }}{% else %}sign in{% endif %}</span>
                <span class="amz-two__bottom">Account & Lists</span>
              </span>
            </a>
          {%- endif -%}

          {%- if section.settings.show_returns_orders -%}
            <a class="amz-util amz-returns" href="{{ routes.account_url }}">
              <span class="amz-two">
                <span class="amz-two__top">Returns</span>
                <span class="amz-two__bottom">&amp; Orders</span>
              </span>
            </a>
          {%- endif -%}

          {%- if section.settings.show_cart -%}
            <a class="amz-util amz-cart" href="{{ routes.cart_url }}" aria-label="Cart">
              <span class="amz-cart__iconwrap">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>
                <span class="amz-cart__count">{{ cart.item_count }}</span>
              </span>
              <span>Cart</span>
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>

    <div class="amz-header__nav">
      <div class="amz-container">
        <nav class="amz-nav" aria-label="Primary">
          <a href="/collections/all">â˜° All</a>
          <a href="/collections/health">HEALTH</a>
          <a href="/collections/beauty">BEAUTY</a>
          <a href="/collections/clothing">CLOTHING</a>
          <a href="/collections/electronics">ELECTRONICS</a>
          <a href="/collections/this-weeks-deals">SHOP THIS WEEKS DEALS</a>
        </nav>
        {%- if section.settings.show_promo and section.settings.promo_text != blank -%}
          <div class="amz-promo">{{ section.settings.promo_text }}</div>
        {%- endif -%}
      </div>
    </div>
  </header>
</div>

{% schema %}
{
  "name": "Header (Amazon style)",
  "settings": [
    {
      "type": "header",
      "content": "Location"
    },
    {
      "type": "checkbox",
      "id": "show_location",
      "label": "Show location",
      "default": true
    },
    {
      "type": "text",
      "id": "location_label",
      "label": "Location label",
      "default": "Deliver to"
    },
    {
      "type": "text",
      "id": "location_value",
      "label": "Location value",
      "default": "United States"
    },
    {
      "type": "url",
      "id": "location_link",
      "label": "Location link"
    },
    {
      "type": "header",
      "content": "Search"
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search placeholder",
      "default": "Search..."
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation menu"
    },
    { "type": "checkbox", "id": "show_promo", "label": "Show right promo text", "default": false },
    { "type": "text", "id": "promo_text", "label": "Right promo text", "default": "Shop great deals now" },
    {
      "type": "header",
      "content": "Display Options"
    },
    { "type": "checkbox", "id": "show_account", "label": "Show account", "default": true },
    { "type": "checkbox", "id": "show_returns_orders", "label": "Show returns & orders", "default": true },
    { "type": "checkbox", "id": "show_cart", "label": "Show cart", "default": true },
    { "type": "header", "content": "Auto Collections in Nav" },
    { "type": "checkbox", "id": "show_auto_collections", "label": "Append collection titles automatically", "default": true },
    { "type": "range", "id": "collections_limit", "label": "Collections to show", "min": 3, "max": 24, "step": 1, "default": 10 }
  ],
  "presets": [{ "name": "Header (Amazon style)" }]
}
{% endschema %}
