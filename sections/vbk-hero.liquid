<section class="vbk-hero color-scheme color-scheme--scheme-1">
  <div class="vbk-hero__inner">
    <div class="vbk-hero__copy">
      {% if section.settings.subheading %}<p class="vbk-hero__kicker">{{ section.settings.subheading }}</p>{% endif %}
      {% if section.settings.heading %}<h1 class="vbk-hero__headline">{{ section.settings.heading }}</h1>{% endif %}
      {% if section.settings.text %}<p class="vbk-hero__text" style="margin:0">{{ section.settings.text }}</p>{% endif %}
      {% if section.settings.button_label %}
        <a href="{{ section.settings.button_link | default: routes.all_products_collection_url }}" class="vbk-hero__cta btn" aria-label="{{ section.settings.button_label | escape }}">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
    <div class="vbk-hero__visual">
      {% if section.settings.hero_image %}
        <img class="vbk-hero__img" width="1440" height="1028" decoding="async" loading="eager"
             src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.heading | default: shop.name | escape }}">
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
{ "name":"VBK Hero",
  "settings":[
    {"type":"image_picker","id":"hero_image","label":"Hero Image"},
    {"type":"text","id":"subheading","label":"Subheading","default":"THE VIRAL SENSATION"},
    {"type":"text","id":"heading","label":"Heading","default":"ONE KIT TO GLOW UP."},
    {"type":"text","id":"text","label":"Body","default":"Not all beauty tools are created equal."},
    {"type":"text","id":"button_label","label":"Button label","default":"SHOP NOW"},
    {"type":"url","id":"button_link","label":"Button link"}],
  "presets":[{"name":"VBK Hero"}] }
{% endschema %}
