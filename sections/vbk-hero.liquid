<section class="bg-white">
  <div class="container mx-auto">
      <div class="flex flex-col md:flex-row items-center">
          <div class="w-full md:w-1/2 bg-primary text-white flex flex-col justify-center text-left p-8 sm:p-12 lg:p-20 h-[50vh] md:h-[80vh] min-h-[450px] min-h-[450px]">
              <h2 class="text-sm font-bold tracking-widest uppercase">{{ section.settings.subheading }}</h2>
              <h1 class="text-5xl lg:text-7xl font-black my-4 leading-none">{{ section.settings.heading }}</h1>
              <p class="text-lg mb-8">{{ section.settings.text }}</p>
              {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="bg-accent text-gray-900 font-bold py-3 px-8 rounded-md text-lg hover:bg-accent-dark transition-transform transform hover:scale-105 inline-block self-start shadow-lg">
                    {{ section.settings.button_label }}
                </a>
              {% endif %}
          </div>
          <div class="w-full md:w-1/2 h-[50vh] md:h-[80vh] min-h-[450px] min-h-[450px]">
              {% if section.settings.image != blank %}
                <img 
                  src="{{ section.settings.image | image_url: width: 1200 }}" 
                  alt="{{ section.settings.image.alt | escape }}" 
                  class="w-full h-full object-cover"
                  width="{{ section.settings.image.width }}"
                  height="{{ section.settings.image.height }}"
                  loading="lazy"
                >
              {% else %}
                <div class="w-full h-full bg-gray-200 flex items-center justify-center"><span class="text-gray-500">Add an image</span></div>
              {% endif %}
          </div>
      </div>
  </div>
</section>
{% schema %}
{
  "name": "Hero Section",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Hero Image" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "THE VIRAL SENSATION" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "ONE KIT TO GLOW UP." },
    { "type": "text", "id": "text", "label": "Text", "default": "Not all beauty tools are created equal." },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "SHOP NOW" },
    { "type": "url", "id": "button_link", "label": "Button Link" }
  ],
  "presets": [{ "name": "Hero Section" }]
}
{% endschema %}
