{{ 'amz.css' | asset_url | stylesheet_tag }}
<section class="amz amz-banner" style="margin:0 0 32px">
  {% if section.settings.image != blank %}
    {{ section.settings.image | image_url: width: 2400 | image_tag: class: '', loading: 'lazy', widths:'1200,1600,2000,2400' }}
  {% else %}
    <img src="https://placehold.co/1200x200/333333/F0A800?text=Shop+Our+Summer+Collection" alt="Banner">
  {% endif %}
</section>

{% schema %}
{
  "name":"Full-width Banner",
  "settings":[ { "type":"image_picker","id":"image","label":"Banner image" } ],
  "presets":[{ "name":"Full-width Banner" }]
}
{% endschema %}
