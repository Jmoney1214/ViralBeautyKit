<!-- Announcement Bar -->
<div class="bg-accent text-gray-900 text-center p-2 text-sm font-bold tracking-wide">
    FREE SAMPLES WITH ALL ORDERS
</div>

<!-- Header -->
<header id="header" class="bg-white sticky top-0 z-40 transition-shadow duration-300">
    <!-- Main Header Part (Logo, Icons) -->
    <div class="container mx-auto px-6">
        <div class="relative flex items-center justify-between h-16">
            <!-- Mobile Menu Button & Left Nav placeholder -->
            <div class="flex-1 flex items-center justify-start">
                 <button id="mobile-menu-button" class="lg:hidden p-2 -ml-2">
                    <i data-lucide="menu" class="h-6 w-6"></i>
                </button>
            </div>

            <!-- Logo -->
            <div class="absolute inset-y-0 left-0 flex items-center lg:static lg:inset-auto lg:ml-0 lg:pr-0" style="left: 50%; transform: translateX(-50%);">
                <a href="/" class="text-3xl font-extrabold tracking-tight text-gray-900">
                    ViralBeauty<span class="text-primary">Kit</span>Â®
                </a>
            </div>

            <!-- Icons -->
            <div class="flex-1 flex items-center justify-end space-x-4">
                <button class="text-gray-600 hover:text-primary transition hidden sm:inline-block"><i data-lucide="search" class="h-5 w-5"></i></button>
                <a href="/account" class="text-gray-600 hover:text-primary transition hidden sm:inline-block"><i data-lucide="user" class="h-5 w-5"></i></a>
                <a href="/cart" class="relative text-gray-600 hover:text-primary transition">
                    <i data-lucide="shopping-bag" class="h-5 w-5"></i>
                    <span id="cart-count" class="absolute -top-2 -right-2 bg-accent text-gray-900 text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center">{{ cart.item_count }}</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Sub Navigation -->
    <nav class="hidden lg:block border-t border-b border-gray-200">
        <div class="container mx-auto px-6">
            <div class="flex items-center justify-center space-x-8 py-3">
                <a href="/collections/all" class="text-gray-700 font-semibold hover:text-primary transition text-sm flex items-center">Shop All</a>
                <a href="/collections/skincare-tools" class="text-gray-700 font-semibold hover:text-primary transition text-sm flex items-center">Skincare Tools <i data-lucide="chevron-down" class="h-4 w-4 ml-1"></i></a>
                <a href="/collections/hair-care" class="text-gray-700 font-semibold hover:text-primary transition text-sm flex items-center">Hair Care <i data-lucide="chevron-down" class="h-4 w-4 ml-1"></i></a>
                <a href="/collections/kits-sets" class="text-gray-700 font-semibold hover:text-primary transition text-sm flex items-center">Kits & Sets</a>
                <a href="#best-sellers" class="text-gray-700 font-semibold hover:text-primary transition text-sm flex items-center">Best Sellers</a>
                <a href="/collections/sale" class="text-gray-700 font-semibold hover:text-primary transition text-sm flex items-center">Sale</a>
            </div>
            <div class="text-center pb-3">
                 <a href="#" class="text-gray-700 font-semibold hover:text-primary transition text-sm">Rewards</a>
            </div>
        </div>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden" aria-labelledby="mobile-menu-button">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t">
            <a href="/collections/all" class="text-gray-700 hover:bg-gray-100 block px-3 py-2 rounded-md text-base font-medium">Shop All</a>
            <a href="/collections/skincare-tools" class="text-gray-700 hover:bg-gray-100 block px-3 py-2 rounded-md text-base font-medium">Skincare Tools</a>
            <a href="/collections/hair-care" class="text-gray-700 hover:bg-gray-100 block px-3 py-2 rounded-md text-base font-medium">Hair Care</a>
            <a href="/collections/kits-sets" class="text-gray-700 hover:bg-gray-100 block px-3 py-2 rounded-md text-base font-medium">Kits & Sets</a>
            <a href="#best-sellers" class="text-gray-700 hover:bg-gray-100 block px-3 py-2 rounded-md text-base font-medium">Best Sellers</a>
            <a href="/collections/sale" class="text-gray-700 hover:bg-gray-100 block px-3 py-2 rounded-md text-base font-medium">Sale</a>
            <a href="#" class="text-gray-700 hover:bg-gray-100 block px-3 py-2 rounded-md text-base font-medium">Rewards</a>
        </div>
    </div>
</header>

