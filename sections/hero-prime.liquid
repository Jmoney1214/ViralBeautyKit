<style>
  .hero-wrap--{{ section.id }}{ --hero-focus-y: {{ section.settings.focus_y | default: 30 }}%; }
</style>
<section class="hero-wrap hero-wrap--{{ section.id }}">
  {% liquid
    assign bg_url = ''
    if section.settings.bg != blank
      assign bg_url = section.settings.bg | image_url: width: 2400
    elsif section.settings.bg_external != blank
      assign bg_url = section.settings.bg_external
    endif
  %}
  {% if bg_url != '' %}
    <div class="hero__bg" style="background-image: url({{ bg_url }});"></div>
  {% endif %}
  <div class="page-width hero__in grid-2">
    <div>
      {% if section.settings.kicker %}<span class="badge">{{ section.settings.kicker }}</span>{% endif %}
      {% if section.settings.show_heading %}<h1>{{ section.settings.heading }}</h1>{% endif %}
      {% if section.settings.show_subheading and section.settings.subheading %}<p>{{ section.settings.subheading }}</p>{% endif %}
      <ul class="hero__bullets">
        {% for block in section.blocks %}{% if block.type == 'bullet' %}
        <li><span class="hero__dot"></span><span>{{ block.settings.text }}</span></li>
        {% endif %}{% endfor %}
      </ul>
      <div style="display:flex;gap:12px;flex-wrap:wrap">
        {% assign primary_label = section.settings.btn_label | default: 'Shop Pickleball Sets Now' %}
        {% assign primary_link = section.settings.btn_link | default: routes.collections_url %}
        <a class="btn" href="{{ primary_link }}" aria-label="{{ primary_label }}">{{ primary_label }}</a>
        {% if section.settings.btn2_label and section.settings.btn2_link %}<a class="btn btn--outline" href="{{ section.settings.btn2_link }}">{{ section.settings.btn2_label }}</a>{% endif %}
      </div>
      {% if section.settings.rules_label and section.settings.rules_link %}
        <p class="upsell"><a href="{{ section.settings.rules_link }}" style="color:var(--brand);text-decoration:underline;text-underline-offset:2px">{{ section.settings.rules_label }}</a></p>
      {% endif %}
      {% if section.settings.upsell %}<p class="upsell">{{ section.settings.upsell }}</p>{% endif %}
    </div>
    <div>{% if section.settings.side_img %}{{ section.settings.side_img | image_url: width: 1200 | image_tag: loading: 'lazy', style: 'border-radius:14px' }}{% endif %}</div>
  </div>
  <div class="hero__fade" aria-hidden="true"></div>
</section>
{% schema %}
{
  "name":"Hero Prime",
  "settings":[
    {"id":"bg","type":"image_picker","label":"Background image"},
    {"id":"bg_external","type":"url","label":"Background image (external URL)","info":"Optional: paste an external image URL to use instead of the picker."},
    {"id":"side_img","type":"image_picker","label":"Right image"},
    {"id":"kicker","type":"text","label":"Kicker","default":"New • Pickleball • Pro"},
    {"id":"show_heading","type":"checkbox","label":"Show heading","default":false},
    {"id":"heading","type":"text","label":"Heading","default":"Serve. Set. Score."},
    {"id":"show_subheading","type":"checkbox","label":"Show subheading","default":false},
    {"id":"subheading","type":"textarea","label":"Subheadline","default":"Enter to win. See details."},
    {"id":"btn_label","type":"text","label":"Primary button label","default":"Shop Pickleball Sets Now"},
    {"id":"btn_link","type":"url","label":"Primary button link"},
    {"id":"btn2_label","type":"text","label":"Secondary button label","default":"Build a Bundle & Save"},
    {"id":"btn2_link","type":"url","label":"Secondary button link"},
    {"id":"upsell","type":"text","label":"Small reassurance note","default":"Free shipping over $50 · 30-day returns"},
    {"id":"focus_y","type":"range","label":"Image vertical focus (%)","min":0,"max":100,"step":1,"default":30},
    {"id":"rules_label","type":"text","label":"Rules link label","default":"Details"},
    {"id":"rules_link","type":"url","label":"Rules link URL"}
  ],
  "blocks":[
    {"type":"bullet","name":"Bullet","settings":[{"id":"text","type":"text","label":"Bullet text","default":"Free Shipping over $50"}]}
  ],
  "presets":[{"name":"Hero Prime","blocks":[{"type":"bullet"},{"type":"bullet"},{"type":"bullet"},{"type":"bullet"}]}]
}
{% endschema %}
